# laços de repetiçao

for i in range(5):
    print("Repetiçao", i)

i = 0
while i <= 10:
    print("Repetiçao", i)
    i += 2

#do while nao existe em python

# funçao
def repetir():
    i = 0
    while i < 10:
        print("Repetiçao", i)
        i += 1
    return

repetir()

# funçao com parametros
def repetirVezes(vezes):
    i = 0
    while i < vezes:
        print("Repetiçao", i)
        i += 1
    return

repetirVezes(5)

#funcoes com retorno
def somar(a, b):
    return a + b
resultado = somar(5, 3)
print("Resultado:", resultado)

#bibliotecas
import math

raiz = math.sqrt(16)
print("Raiz quadrada de 16 é:", raiz)
potencia = math.pow(2,3)
print("2 elevado a 3 é: ", potencia)
